rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user is a member of the room
    function isMember(roomData) {
      return isSignedIn() && request.auth.uid in roomData.members;
    }
    
    // Chat rooms
    match /chat_rooms/{roomId} {
      // Allow read if:
      // - Public room: anyone authenticated
      // - DM room: only members
      allow read: if isSignedIn() && (
        resource.data.type == 'public' ||
        isMember(resource.data)
      );
      
      // Allow create for authenticated users (for DM rooms)
      allow create: if isSignedIn() &&
        request.resource.data.type in ['dm', 'public'] &&
        (
          // DM rooms must have exactly 2 members
          (request.resource.data.type == 'dm' && 
           request.resource.data.members.size() == 2 &&
           request.auth.uid in request.resource.data.members) ||
          // Public rooms can be created (for seeding)
          request.resource.data.type == 'public'
        );
      
      // Messages subcollection
      match /messages/{messageId} {
        // Allow read if user can read the parent room
        allow read: if isSignedIn() && (
          get(/databases/$(database)/documents/chat_rooms/$(roomId)).data.type == 'public' ||
          isMember(get(/databases/$(database)/documents/chat_rooms/$(roomId)).data)
        );
        
        // Allow create if:
        // - User is authenticated
        // - User can access the room (public or member)
        // - senderUid matches authenticated user
        // - text is non-empty and <= 2000 chars
        allow create: if isSignedIn() &&
          request.resource.data.senderUid == request.auth.uid &&
          request.resource.data.text is string &&
          request.resource.data.text.size() > 0 &&
          request.resource.data.text.size() <= 2000 &&
          (
            get(/databases/$(database)/documents/chat_rooms/$(roomId)).data.type == 'public' ||
            isMember(get(/databases/$(database)/documents/chat_rooms/$(roomId)).data)
          );
      }
    }
    
    // Existing collections (tutors, teammates, etc.) - keep existing rules
    match /tutors/{document=**} {
      allow read, write: if true; // Test mode
    }
    
    match /teammates/{document=**} {
      allow read, write: if true; // Test mode
    }
    
    match /studentRequests/{document=**} {
      allow read, write: if true; // Test mode
    }
  }
}
