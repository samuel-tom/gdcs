rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user is a member of the room
    function isMember(roomData) {
      return isSignedIn() && request.auth.uid in roomData.members;
    }
    
    // Chat rooms
    match /chat_rooms/{roomId} {
      // Allow full access for authenticated users (test mode for hackathon)
      allow read, write, delete: if isSignedIn();
      
      // Messages subcollection
      match /messages/{messageId} {
        // Allow full access for authenticated users (test mode)
        allow read, write: if isSignedIn();
      }
    }
    
    // Existing collections (tutors, teammates, etc.) - keep existing rules
    match /tutors/{document=**} {
      allow read, write: if true; // Test mode
    }
    
    match /teammates/{document=**} {
      allow read, write: if true; // Test mode
    }
    
    match /studentRequests/{document=**} {
      allow read, write: if true; // Test mode
    }
  }
}
